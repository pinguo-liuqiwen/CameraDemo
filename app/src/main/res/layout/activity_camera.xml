<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/sfv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_rotating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="35dp"
        android:scaleType="centerCrop"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/ibtn_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/takepic_selector"
        android:text="拍照"/>

    <com.camera.ui.SeekBar
        android:visibility="invisible"
        android:id="@+id/pgsb_focal_length"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ></com.camera.ui.SeekBar>

</RelativeLayout>
